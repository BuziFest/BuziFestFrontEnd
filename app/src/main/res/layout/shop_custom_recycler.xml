<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150sp"
    android:layout_height="230sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/blue"
    app:cardCornerRadius="20sp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="15sp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/shop_recycler_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shop_recycler_poster"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_rounded_shop"
            />

        <ImageView
            android:id="@+id/shop_recycler_logo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_below="@id/shop_recycler_image"
            android:src="@drawable/home_horizontal_recylcer_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/shop_recyler_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bright Lamp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_below="@id/shop_recycler_logo"
            android:textAlignment="center"
            android:layout_marginTop="5sp"/>
        
        <TextView
            android:id="@+id/shop_recycler_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Business Value"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_tegular"
            android:textColor="@color/white"
            android:layout_below="@id/shop_recyler_name"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/shop_recycler_business_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Rp 1.675.000.000"
            android:textColor="@color/green"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_below="@id/shop_recycler_text"
            android:layout_marginTop="5sp"/>



    </RelativeLayout>



</androidx.cardview.widget.CardView>