<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ApplicationFormActivity"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shop_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20sp">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/home_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:src="@drawable/logo_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/shop_header"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20sp"
            android:gravity="center_horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30sp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="35sp"
                    android:src="@drawable/application_business_detail"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Business Details"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/white"
                android:layout_marginTop="8sp"
                />

            <EditText
                android:id="@+id/application_business_name"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="20sp"
                android:hint="Business Name"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />
            <EditText
                android:id="@+id/application_business_address"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="12sp"
                android:hint="Business Address"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />
            <EditText
                android:id="@+id/application_business_province"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="12sp"
                android:hint="Business Province"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />

            <EditText
                android:id="@+id/application_business_type"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="12sp"
                android:hint="Business Type"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />

            <EditText
                android:id="@+id/application_business_description"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="12sp"
                android:hint="Description"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40sp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="35sp"
                    android:src="@drawable/application_funding_details"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Funding Details"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/white"
                android:layout_marginTop="8sp"
                />

            <EditText
                android:id="@+id/application_funding_target"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="20sp"
                android:hint="Funding Target"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />

            <EditText
                android:id="@+id/application_dividend_payout_period"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="12sp"
                android:hint="Dividen Payout Period (in months)"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40sp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="35sp"
                    android:src="@drawable/application_ownership"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ownership Details"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/white"
                android:layout_marginTop="8sp"
                />

            <EditText
                android:id="@+id/application_public_shared_stock_ratio"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="20sp"
                android:hint="Public Shared Stock Ratio"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />

            <EditText
                android:id="@+id/application_main_shareholder"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="12sp"
                android:hint="Main Shareholder"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />
            <EditText
                android:id="@+id/application_publisher"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/bg_rounded_gray"
                android:layout_marginTop="12sp"
                android:hint="Publisher (applicant's business)"
                android:textColorHint="@color/white"
                android:paddingLeft="10sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40sp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="35sp"
                    android:src="@drawable/application_license"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="License and Requirements"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/white"
                android:layout_marginTop="8sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coming Soon"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_bold"/>


            <TextView
                android:layout_width="90sp"
                android:layout_height="50sp"
                android:background="@drawable/bg_rounded_green"
                android:text="Apply"
                android:layout_marginTop="40sp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:paddingTop="10sp"
                android:textAlignment="center"
                android:layout_marginBottom="20sp"/>


        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>