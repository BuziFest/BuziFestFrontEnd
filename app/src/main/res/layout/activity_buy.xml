<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BuyActivity"
    android:background="@color/blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/buy_back_button"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/detail_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:src="@drawable/logo_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_tvBuyShares"
        android:text="Buy Shares"
        android:fontFamily="@font/roboto_tegular"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_constraint"
        android:layout_marginHorizontal="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_tvAmount"
        android:text="Amount"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_tegular"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/buy_tvBuyShares"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="30sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:background="@drawable/login_custom_edittext"
        app:layout_constraintTop_toBottomOf="@id/buy_tvAmount"
        android:id="@+id/buy_etAmount"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10sp"
        android:paddingHorizontal="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"/>

    <TextView
        android:id="@+id/buy_tvOutOf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_tegular"
        android:text="Out of Rp 470.000"
        app:layout_constraintTop_toBottomOf="@id/buy_etAmount"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/buy_continue"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:background="@drawable/bg_rounded_green"
        android:text="Continue"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/buy_tvOutOf"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="30sp"
        android:paddingTop="8sp"/>





</androidx.constraintlayout.widget.ConstraintLayout>