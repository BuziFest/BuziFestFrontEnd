<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Register"
    android:background="@drawable/login_background_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@drawable/logo"
            android:layout_marginTop="10sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/register_bottomui_new"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_marginTop="20sp"
                />

            <EditText
                android:id="@+id/register_etUsername"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/login_custom_edittext"
                android:layout_marginHorizontal="50sp"
                android:layout_marginTop="20sp"
                android:inputType="textPersonName"
                android:hint="Username"
                android:paddingLeft="15sp"
                android:textAppearance="@style/CustomEditTextHintLoginRegister"
                android:textColorHint="#BDBDBF"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/register_etEmail"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/login_custom_edittext"
                android:layout_marginHorizontal="50sp"
                android:layout_marginTop="20sp"
                android:inputType="textEmailAddress"
                android:paddingLeft="15sp"
                android:hint="Email"
                android:textAppearance="@style/CustomEditTextHintLoginRegister"
                android:textColorHint="#BDBDBF"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/register_etPassword"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/login_custom_edittext"
                android:layout_marginHorizontal="50sp"
                android:layout_marginTop="20sp"
                android:inputType="textPassword"
                android:paddingLeft="15sp"
                android:hint="Password"
                android:textAppearance="@style/CustomEditTextHintLoginRegister"
                android:textColorHint="#BDBDBF"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/register_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/login_custom_edittext"
                android:layout_marginHorizontal="50sp"
                android:layout_marginTop="20sp"
                android:inputType="number"
                android:paddingLeft="15sp"
                android:hint="Phone Number"
                android:textAppearance="@style/CustomEditTextHintLoginRegister"
                android:textColorHint="#BDBDBF"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/register_btnNext"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:backgroundTint="@color/blue"
                android:layout_marginHorizontal="90sp"
                android:textAlignment="center"
                android:text="Next"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_marginTop="30sp"
                android:textColor="@color/white"/>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>