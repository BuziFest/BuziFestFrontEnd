<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.PortofolioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_gray"
            android:layout_marginHorizontal="12dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/portfolioUserBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 999.999"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#00DDA3"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_gray"
            android:layout_marginHorizontal="12dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asset"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/portfolioUserAsset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 999.999"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#00DDA3"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_gray"
            android:layout_marginHorizontal="12dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portfolio Value"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/portfolioUserValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 999.999"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#00DDA3"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_gray"
            android:layout_marginHorizontal="12dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Earnings"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/portfolioUserEarnings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 999.999"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#00DDA3"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Portfolio List"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_bold"
        android:paddingHorizontal="12dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>