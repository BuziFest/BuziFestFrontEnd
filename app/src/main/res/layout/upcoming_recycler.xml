<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150sp"
    android:layout_height="160sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/blue"
    app:cardCornerRadius="20sp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="15sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/upcoming_recycler_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shop_recycler_poster"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_rounded_shop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/upcoming_recycler_days"
            android:layout_width="60sp"
            android:layout_height = "30sp"
            android:background="@drawable/upcoming_days_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="36 Days"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:paddingTop="5sp"/>

        <ImageView
            android:id="@+id/upcoming_recycler_logo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/home_horizontal_recylcer_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upcoming_recycler_image"
            android:layout_marginLeft="5sp"/>

        <TextView
            android:id="@+id/upcoming_recyler_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bright Lamp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/upcoming_recycler_logo"
            app:layout_constraintTop_toBottomOf="@id/upcoming_recycler_image"
            app:layout_constraintBottom_toBottomOf="parent"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>