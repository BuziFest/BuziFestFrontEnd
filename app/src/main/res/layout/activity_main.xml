<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/login_background_image">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:src="@drawable/logo"
            android:layout_marginTop="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_bottomui"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#33404F"
                android:fontFamily="@font/roboto_bold"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_marginTop="20sp"
                />

            <EditText
                android:id="@+id/login_etEmail"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/login_custom_edittext"
                android:layout_marginHorizontal="50sp"
                android:layout_marginVertical="20sp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:paddingLeft="15sp"
                />

            <EditText
                android:id="@+id/login_etPassword"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/login_custom_edittext"
                android:layout_marginHorizontal="50sp"
                android:layout_marginTop="20sp"
                android:inputType="textPassword"
                android:paddingLeft="15sp"
                android:hint="Password"
                />

            <Button
                android:id="@+id/login_loginButton"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:backgroundTint="@color/blue"
                android:layout_marginHorizontal="90sp"
                android:textAlignment="center"
                android:text="Login"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_marginTop="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:textAlignment="center"
                    android:textColor="#808080"
                    android:fontFamily="@font/roboto_medium"/>

                <TextView
                    android:id="@+id/login_tvToRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register here"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginLeft="5sp"/>

            </LinearLayout>








        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>