<!-- res/drawable/button_background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00B588"/> <!-- Darker shade for pressed state -->
            <corners android:radius="4dp"/> <!-- Optional: to give rounded corners -->
        </shape>
    </item>
    <!-- State when the button is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#00DDA3"/> <!-- Original color for focused state -->
            <corners android:radius="4dp"/> <!-- Optional: to give rounded corners -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00DDA3"/> <!-- Original color for default state -->
            <corners android:radius="4dp"/> <!-- Optional: to give rounded corners -->
        </shape>
    </item>
</selector>